<div class= "container">
 <div class= "row">
    <div class = "col-lg-1" >
      <img src="assets/img/logo.png" alt="Eat A Burger!" id="logo" class="center-block">
    </div>
  </div>
  <div class= "row">
    <div class = "col-lg-1" >
      <img src="assets/img/eat.gif" alt="Eat Me" id="eat-gif" class="center-block">
    </div>
  </div>
  <div class="row" >
    <div class="col-md-12">
      <div id="custom-search-input">
        <form class="create-form" action="/" method="POST">
          <div class="input-group col-md-12 center-block" id="add-burger">
            <input type="text" class="form-control input-lg" name="burgerName" id="burger-name" placeholder="Add a burger!"  />
              <span class="input-group-btn center-block">
                  <button class="btn btn-info btn-lg" type="submit">
                    <i class="glyphicon glyphicon-circle-arrow-left"></i>
                  </button>
              </span>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 tables" id="menu">
      <h3>Menu</h3>
      <table class="table table-hover">
        {{#each burgers}}
          {{#unless this.devoured}}
            <tr>
              <td>{{this.id}}.</td>
              <td>{{this.burger_name}}</td>
              <td>
                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                    <button type="submit" class="btn btn-xs btn-danger">Devour it !</button>
                </form>
              </td>
            </tr>
          {{/unless}} 
        {{/each}}
      </table>
    </div>
    <div class="col-lg-6 tables" id ="eaten">
      <h3>Eaten</h3>
        <table class="table table-hover">
          {{#each burgers}} 
            {{#if this.devoured}}
              <tr>
                <td>{{this.id}}.</td>  
                <td>{{this.burger_name}}</td>
              </tr>
            {{/if}}
          {{/each}}
        </table>
    </div>
  </div>
  
  <footer class="row text-center" >
    <p>Copyright @ Zamir Thind 2017</p>
  </footer>
</div>
